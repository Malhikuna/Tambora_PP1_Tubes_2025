<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="logistik.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            styleClass="login-pane">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="50.0">
        <Label text="Sistem Logistik" styleClass="login-title"/>

        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" maxWidth="400"/>

        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" maxWidth="400"/>

        <Button text="Login" onAction="#handleLogin" styleClass="login-button"/>

        <Label fx:id="errorLabel" textFill="red" styleClass="error-label"/>
    </VBox>

</AnchorPane>
