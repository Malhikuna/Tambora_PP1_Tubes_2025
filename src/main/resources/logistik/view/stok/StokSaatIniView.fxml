<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="10.0" styleClass="table-container">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Cari:"/>
        <TextField fx:id="searchField" promptText="Cari nama barang..." />
        <Button fx:id="simpanButton" mnemonicParsing="false" text="Cari" styleClass="button-primary"/>
    </HBox>

    <TableView fx:id="barangTableView" prefWidth="800.0" prefHeight="400.0">
        <columns>
            <TableColumn fx:id="kodeColumn" text="Kode Barang" prefWidth="150.0"/>
            <TableColumn fx:id="jumlahColumn" text="Jumlah" prefWidth="150.0"/>
            <TableColumn fx:id="tanggalMasukColumn" text="Tanggal Masuk" prefWidth="150.0"/>
        </columns>
    </TableView>

</VBox>
